/* pages/home/home.wxss */

.slide-image{
    height: 100%;
    width: 100%;
}

.girds{
  width: 100%;
  border-top: 1rpx solid #ebebeb;
  border-left:  1rpx solid #ebebeb;
  display: flex;
  flex-wrap: wrap;
}

.girds .item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.3333%;
  height: 250rpx;
  border-right: 1rpx solid #ebebeb;
  border-bottom: 1rpx solid #ebebeb;
  box-sizing: border-box;
}
.girds .item image{
  width: 75rpx;
  height: 75rpx;
} 
.girds .item text{
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #242424;
}
.biaoqian{
  display: flex;
  justify-content: center;
}
.biaoqian>view{
  flex:1;
  height: 220rpx;
  

  border-top: 5rpx solid #e0e0e0; 
  border-bottom: 5rpx solid #e0e0e0; 
}
.biaoqian>view navigator{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center
}
.biaoqian>view image{

  width: 85%;
  height:85%;
}

