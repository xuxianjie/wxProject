/* pages/car/car.wxss */
page{
  background: #f8f8f8;
  padding-bottom: 80rpx;
}
.shop{
  width: 90%;
  margin: 10rpx auto 20rpx;
  border-radius: 20rpx ; 
  height: 180rpx;
  border: 1rpx solid #e0e0e0;
  display: flex;
  background: #fcfcfc;
  padding: 10rpx 15rpx;
}
.shop icon {
  margin-top: 60rpx;
  margin-right: 10rpx;
}
.image{
  width: 150rpx;
  height: 150rpx;
  /* border: 1rpx solid #e0e0e0; */
  background: #fff;
}
.image image{
  width: 100%;
  height: 100%;
}
.info{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
}
.info .title{
  font-size: 28rpx;
  color: #444;
}
.info .price{
  font-size: 24rpx;
  color: #8f8f94;
}
.shop button{
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 50rpx;
  font-size: 32rpx;
  padding-left: 20rpx; 
  padding-right: 20rpx; 
}

.account{
  position: fixed;
  bottom:0;
  left: 0;
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  background: #fff;
  box-sizing: border-box;
}
.account view:first-of-type{
  width: 100rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #8f8f94;
}
.account .total{
  flex:1;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  font-size: 26rpx;
  color: #444;
  padding-right: 30rpx;
}

.account button{
  width: 120rpx;
  height: 60rpx;
  background: rgb(241, 59, 3);
  color: #f1f1f1;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 0 30rpx;
}
